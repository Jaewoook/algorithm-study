{
    "tasks": [
        {
            "label": "Java Build",
            "type": "shell",
            "command": "javac",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        },
        {
            "label": "Java Run active file",
            "type": "shell",
            "command": "java",
            "args": [
                "Main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "C++ Build active file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "C++ Run active file",
            "type": "shell",
            "command": "cd ${fileDirname} && ./${fileBasenameNoExtension}",
            "group": {
                "kind": "test"
            }
        }
    ],
    "version": "2.0.0"
}
