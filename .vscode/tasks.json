{
    "tasks": [
        {
            "label": "Java Build",
            "type": "shell",
            "command": "javac",
            "args": [
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Java Run current file",
            "type": "shell",
            "command": "java",
            "args": [
                "Main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Python Run current file",
            "type": "shell",
            "command": "python3",
            "args": [
                "${file}"
            ],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "C++ Build current file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-O2",
                "-Wall",
                "-lm",
                "-std=gnu++17"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "C++ Run current file",
            "type": "shell",
            "command": "cd ${fileDirname} && ./${fileBasenameNoExtension}",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Go Build current file",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Go Run current file",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "test",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}
